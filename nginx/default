# add to /etc/nginx/sites-available/default

# Following blocks are for uwsgi config. Started with:
# $ uwsgi -s /tmp/yourflaskapp.sock --manage-script-name --mount /home/git/tank_lora/python/api/tank_views=myapp:app
# where mount point is the python file (without extension) that calls app = Flask(__name__)
location /yourflaskapp {
        rewrite ^/yourflaskapp/;
        try_files $uri @yourflaskapp;
}

location @yourflaskapp {
        include uwsgi_params;
          uwsgi_pass unix:/tmp/yourflaskapp.sock;
}
